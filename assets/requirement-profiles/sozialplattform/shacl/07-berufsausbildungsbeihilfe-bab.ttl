        sh:minCount 1 ;
        sh:in (false) ;
    ] ;
    sh:property [
        sh:path ff:aufenthaltsort ;
        sh:minCount 1 ;
        sh:in (ff:aufenthaltsort-ao-innerhalb) ;
    ] ;
    sh:property [
        sh:path ff:pflege ;
        sh:minCount 1 ;
        sh:in (true) ;
    ] ;
    sh:property [
        sh:path ff:beruf_neu ;
        sh:minCount 1 ;
        sh:in (ff:beruf_neu-ao-ausbildung) ;
    ] ;
